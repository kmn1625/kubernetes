#injecting secret into deployment
# Add this section inside the containers: -> - name: nginx: section
        env:
        # Inject the token as an environment variable
        - name: EXTERNAL_API_TOKEN
          valueFrom:
            secretKeyRef:
              name: app-credentials # Name of the Secret object
              key: API_TOKEN        # Key inside the Secret to extract

# Add this section inside the containers: -> - name: nginx: section
        env:
        - name: MY_GREETING
          valueFrom:
            configMapKeyRef:
              name: app-settings        # Name of the ConfigMap
              key: GREETING_MESSAGE   # Key we want to extract
